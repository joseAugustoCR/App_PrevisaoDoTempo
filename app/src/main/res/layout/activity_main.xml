<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="15dip"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background">

            <ImageView
                android:id="@+id/temperaturaImageView"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_temp"
                />

            <TextView
                android:id="@+id/temperaturaTextView"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:hint=""
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="15dip"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background">


            <ImageView
                android:id="@+id/descricaoImageView"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_descricao"
                />

            <TextView
                android:id="@+id/descricaoTextView"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:hint=""
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="15dip"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background">


            <ImageView
                android:id="@+id/umidadeImageView"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_umidade"
                />

            <TextView
                android:id="@+id/umidadeTextView"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:hint=""
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="15dip"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background">


            <ImageView
                android:id="@+id/pressaoImageView"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_pressao"
                />


            <TextView
                android:id="@+id/pressaoTextView"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:hint=""
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text=""/>
        </TableRow>






    </TableLayout>
</LinearLayout>